<p id="notice"><%= notice %></p>

<h1>Listing Trainers</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Name</th>
      <th>Email</th>
      <th>Password</th>
      <th>Tel</th>
      <th>Sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trainers.each do |trainer| %>
      <tr>
        <td><%= get_company_name trainer.company_id %></td>
        <td><%= trainer.name %></td>
        <td><%= trainer.email %></td>
        <td><%= trainer.password %></td>
        <td><%= trainer.tel %></td>
        <td><%= (trainer.sex == 1 ? '남':'여') %></td>
        <td><%= link_to 'Show', trainer %></td>
        <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
        <td><%= link_to 'Destroy', trainer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

