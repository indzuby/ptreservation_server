<p id="notice"><%= notice %></p>

<h1>Listing Trainers</h1>

<table>
  <thead>
  <tr>
    <th>Company</th>
    <th>Name</th>
    <th>Email</th>
    <th>Tel</th>
    <th>Sex</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @trainers.each do |trainer| %>
      <% if trainer.is_delete == 1 %>
          <tr class="text-danger">
      <% else %>
          <tr>
      <% end %>
      <td><%= trainer.company.name %></td>
      <td><%= trainer.user.name %></td>
      <td><%= trainer.user.email %></td>
      <td><%= trainer.user.tel %></td>
      <td><%= trainer.user.sex %></td>
      <td><%= link_to 'Show', trainer %></td>
      <td><%= link_to 'Edit', edit_trainer_path(trainer) %></td>
      <td><%= link_to 'Destroy', trainer, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

